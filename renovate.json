{
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Directory\\.Build\\.props$"],
      "matchStrings": [
        "<(?<depName>[^>]+)Version>(?<currentValue>[^<]+)</[^>]+>"
      ],
      "datasourceTemplate": "nuget",
      "versioningTemplate": "nuget"
    }
  ]
  "packageRules": [
    {
      "matchManagers": ["nuget"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "DisCatSharp packages",
      "matchPackagePatterns": ["^DisCatSharp"],
      "groupSlug": "discatsharp"
    },
    {
      "groupName": "Npgsql packages",
      "matchPackagePatterns": ["^Npgsql"],
      "groupSlug": "npgsql"
    },
    {
      "groupName": "Serilog packages",
      "matchPackagePatterns": ["^Serilog"],
      "groupSlug": "serilog"
    }
  ]
}

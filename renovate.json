{
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "labels": [
    "dependencies"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchManagers": [
        "nuget"
      ],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "DisCatSharp packages",
      "groupSlug": "discatsharp",
      "matchPackageNames": [
        "/^DisCatSharp/"
      ]
    },
    {
      "groupName": "Npgsql packages",
      "groupSlug": "npgsql",
      "matchPackageNames": [
        "/^Npgsql/"
      ]
    },
    {
      "groupName": "Serilog packages",
      "groupSlug": "serilog",
      "matchPackageNames": [
        "/^Serilog/"
      ]
    }
  ]
}
